CC       = g++
CFLAGS   = -Wall
BLLIB  = -lblas
LPLIB  = -llapack
LPINC  = -I/usr/include/


all:	basic advanced

basic : basic.cpp
	$(CC) $(CFLAGS) basic.cpp -lmgl-qt -lmgl-glut -lmgl -o basic.out
	
advanced : advanced.cpp
	$(CC) $(CFLAGS) advanced.cpp -lmgl-qt -lmgl-glut -lmgl -o advanced.out
	
data : data.cpp
	$(CC) $(CFLAGS) data.cpp -lmgl-qt -lmgl-glut -lmgl -o data.out
	
data_plotting : data_plotting.cpp
	$(CC) $(CFLAGS) data_plotting.cpp -lmgl-qt -lmgl-glut -lmgl -o data_plotting.out
	
	
clean : 
	rm *.out *.jpg *.eps *.gif *.png