#include<iostream>
#include<math.h>
#include <mgl2/mgl.h>

using namespace std;

int main() {

	// external array
	double *a = new double[50];
	for(int i=0;i<50;i++)   a[i] = sin(M_PI*i/49.);

	mglData y;
	y.Set(a,50);

	// direct array
	mglData y(50);
	for(int i=0;i<50;i++)   y.a[i] = sin(M_PI*i/49.);

	// textual formula
  mglData y(50);
  y.Modify("sin(pi*x)");



	return 0;
}
