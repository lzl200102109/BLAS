#include<iostream>
#include<math.h>
#include <mgl2/mgl.h>
#include <mgl2/qt.h>

using namespace std;

int sample(mglGraph *gr)
{
  mglData y0(50);   y0.Modify("sin(pi*(2*x-1))");
  gr->SubPlot(2,2,0);
  gr->Plot(y0);     gr->Box();
}

int main() {

  mglQT gr(sample3,"MathGL examples");
  return gr.Run();
}
